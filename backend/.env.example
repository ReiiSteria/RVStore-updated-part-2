# Environment Variables for TopUp Game MIS Backend
# Copy this file to .env and fill in your actual values

# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=topup_game_mis

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# SQLAlchemy Settings
ECHO_SQL=False

# JWT Authentication
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=TopUp Game MIS API
VERSION=1.0.0
DESCRIPTION=Management Information System API for TopUp Game Business

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# Optional: Redis for caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Optional: Email settings (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@topupgame.com
EMAILS_FROM_NAME=TopUp Game MIS

# Security
BCRYPT_ROUNDS=12